{
  "name": "live-back",
  "version": "1.0.0",
  "description": "Back-end for the Live web-application",
  "author": "Bohdan Buchok bohdanbuchok@gmail.com",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/bbuukk/live"
  },
  "imports": {
    "#src/*": "./src/*"
  },
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "lint": "eslint",
    "lint:fix": "eslint --fix ./*.js",
    "format": "prettier --write ."
  },
  "keywords": [],
  "dependencies": {
    "@bbuukk/slugtrans": "^1.0.9",
    "axios": "^1.6.8",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-winston": "^4.2.0",
    "jsonwebtoken": "^9.0.2",
    "memory-cache": "^0.2.0",
    "module-alias": "^2.2.3",
    "mongoose": "^8.1.3",
    "nodemon": "^3.0.1",
    "nookies": "^2.5.2",
    "punycode": "^2.3.1",
    "validator": "^13.11.0",
    "winston": "^3.13.0",
    "winston-express": "^0.1.1",
    "winston-mongodb": "^5.1.1"
  },
  "devDependencies": {
    "@babel/core": "^7.24.5",
    "@babel/eslint-parser": "^7.24.5",
    "@babel/preset-env": "^7.24.5",
    "@eslint/js": "^9.1.1",
    "cross-env": "^7.0.3",
    "eslint": "^9.2.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "globals": "^15.1.0",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^9.2.0",
    "prettier": "^3.2.5",
    "supertest": "^7.0.0",
    "vercel": "^34.1.8"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/src/__tests__/utils/",
      "<rootDir>/src/__tests__/setup/",
      "<rootDir>/src/__tests__/in_memory_db/"
    ],
    "moduleNameMapper": {
      "^@src/(.*)$": "<rootDir>/src/$1"
    },
    "transform": {},
    "forceExit": true,
    "verbose": true
  }
}
