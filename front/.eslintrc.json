{
  "extends": [
    "eslint:recommended",
    "next/core-web-vitals",
    "plugin:react/recommended",
    "plugin:prettier/recommended"
  ],
  "plugins": ["prettier"],
  "rules": {
    "semi": "off",
    "react/prop-types": "off",
    "react/react-in-jsx-scope": "off",
    "no-console": 1,
    "no-unused-vars": 1,
    "indent": [2, 2],
    "linebreak-style": [2, "unix"],
    "quotes": [2, "single", { "avoidEscape": true }],
    "prettier/prettier": 2
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "jest": true
  },
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
